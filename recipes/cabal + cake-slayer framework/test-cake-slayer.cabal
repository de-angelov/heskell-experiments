-- extra-source-files:

common common-settings
    -- Other library packages from which modules are imported.
    build-depends:    
        base 
        , relude
        , aeson
        , cake-slayer 
        , case-insensitive 
        , co-log 
        , http-types 
        , mtl
        , postgresql-simple 
        , postgresql-simple-named 
        , servant 
        , servant-server 
        , unliftio 
        , warp 
        , elm-street

    mixins:    
        base hiding (Prelude)
        , relude (Relude as Prelude)
        , relude

    ghc-options: 
        -Wall
        -Wcompat
        -Widentities
        -Wincomplete-uni-patterns
        -Wincomplete-record-updates
        -Wredundant-constraints
        -fhide-source-paths
        -Wmissing-export-lists
        -Wpartial-fields
        -Wmissing-deriving-strategies
        -Wunused-packages

    -- Base language which the package is written in.
    default-language: Haskell2010
    default-extensions: 
        ConstraintKinds
        ,DeriveAnyClass
        ,DeriveFunctor
        ,DeriveGeneric
        ,DerivingStrategies
        ,DerivingVia
        ,FlexibleContexts
        ,FlexibleInstances
        ,GeneralizedNewtypeDeriving
        ,InstanceSigs
        ,KindSignatures
        ,LambdaCase
        ,MultiParamTypeClasses
        ,OverloadedStrings
        ,PatternSynonyms
        ,RecordWildCards
        ,ScopedTypeVariables
        ,StandaloneDeriving
        ,StrictData
        ,TupleSections
        ,TypeApplications
        ,ViewPatterns
library
    import: common-settings
    hs-source-dirs: lib
    exposed-modules: 
        Piece
        Piece.App.Env
        Piece.App.Error
        Piece.App.Monad
        
        Piece.Db.Schema

        Piece.Server 
        Piece.Server.Types
        Piece.Server.Item

        Piece.Core.Id 
        Piece.Core.Item
        Piece.Core.WithId 

executable test-cake-slayer
    -- Import common warning flags.
    import: common-settings
    build-depends: test-cake-slayer
    -- .hs or .lhs file containing the Main module.
    main-is: Main.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:



    -- Directories containing source files.
    hs-source-dirs: app


